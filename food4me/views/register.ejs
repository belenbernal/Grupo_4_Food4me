<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>
            <div class="container form contenedorRegister">
                <div class="row card mx-auto ">
                    <h1 class="registerTitulo">Registrate</h1>
                    <form action="/users/register" method="POST" enctype="multipart/form-data" id="form-reg" class="form-reg">
                        <div class="col-12  col-md-12 datosRegister">

                            <div class="EntradasRegister col-12">
                                <label for="email">Email</label>
                                <input type="email" name="email" id="email" placeholder="Ingresa tu email"
                                    value="<%= (typeof datos !='undefined' && datos.email ? datos.email : null) %>">
                                <span class="text-danger" id="errorEmail">
                                    <%= (typeof errores !='undefined' && errores.email ? errores.email.msg : null) %>
                                </span>
                            </div>

                            <div class="EntradasRegister col-12">
                                <label for="nombre">Nombre</label>
                                <input type="text" name="nombre" id="nombre" placeholder="Ingresa tu nombre"
                                    value="<%= (typeof datos!='undefined' && datos.nombre ? datos.nombre : null) %>">
                                <span class="text-danger" id="errorName">
                                    <%= (typeof errores !='undefined' && errores.nombre ? errores.nombre.msg : null) %>
                                </span>
                            </div>

                            <div class="EntradasRegister col-12">
                                <label for="apellido">Apellido</label>
                                <input type="text" name="apellido" id="apellido" placeholder="Ingresa tu apellido"
                                    value="<%= (typeof datos!='undefined' && datos.apellido ? datos.apellido : null) %>">
                                <span class="text-danger" id="errorLastName">
                                    <%= (typeof errores !='undefined' && errores.apellido ? errores.apellido.msg : null) %>
                                </span>
                            </div>

                            <div class="EntradasRegister col-12">
                                <label for="pass1">Contraseña</label>
                                <input type="password" name="pass" id="pass1" placeholder="Password">
                                <span class="text-danger" id="errorPass1">
                                    <%= (typeof errores !='undefined' && errores.pass ? errores.pass.msg : null) %>
                                </span>
                            </div>

                            <div class="EntradasRegister  col-12">
                                <label for="pass2"> Confirmar Contraseña</label>
                                <input type="password" name="pass2" id="pass2" placeholder="Password">
                                <span class="text-danger" id="errorPass2">
                                    <%= (typeof errores !='undefined' && errores.pass2 ? errores.pass2.msg : null) %>
                                </span>
                            </div>

                            <div class="EntradasRegister col-12">
                                <label for="date">Fecha de Nacimiento </label>
                                <input type="date" name="date" id="date"
                                    value="<%= (typeof datos!='undefined' && datos.date ? datos.date : null) %>">
                                <span class="text-danger" id="errorDate">
                                    <%= (typeof errores !='undefined' && errores.date ? errores.date.msg : null) %>
                                </span>
                            </div>

                            <div class="EntradasRegister col-12 avatar">
                                <label for="image" class="form-label">Foto de perfil</label>
                                <input type="file" id="image" name="image">
                                <span class="text-danger" id="errorImage">
                                    <%= (typeof errores !='undefined' && errores.image ? errores.image.msg : null) %>
                                </span>
                            </div>

                        </div>


                        <div class="col-12 checkRegister">
                            <div class="terminosRegister">
                                <input type="checkbox" name="aceptar" id="aceptar">
                                <label for="aceptar">Acepto los terminos y condiciones.</label><br>
                                <span id="errorAceptar" class="text-danger"></span>
                            </div>
                        </div>

                        <div class=" col-12 botonesRegister">
                            <button type="submit">Registrarme</button>
                        </div>
                        <div class="col-12">
                            <span id="msgError" class="text-danger"></span>
                        </div>

                    </form>


                </div>
            </div>

            <%- include('./partials/footer') %>

                <%- include('./partials/scripts') %>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js" integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ==" crossorigin="anonymous"></script>
                <script src="/javascript/register.js"></script>
    </body>

</html>