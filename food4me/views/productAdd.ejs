<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>

            <div class="container contenedor-product-add">
                <div class="row contenido-form card mx-auto col-12">
                    <form action="">
                        <h2 class="titulo-formu">Carga de producto</h2>

                        <div class="mb-3 entrada">
                            <!--producto-->
                            <label for="producto" class="form-label">Nombre del producto</label>
                            <input type="text" class="form-control" placeholder="Por ejemplo: pasteleria, postre...">
                        </div>

                        <div class="mb-3 entrada">
                            <!--categoria-->
                            <label for="categoria" class="form-label">Categoría</label>
                            <select class="custom-select">
                                <option selected>Selecciona la categoría</option>
                                <option value="entrada">Entrada</option>
                                <option value="platoPrincipal">Plato principal</option>
                                <option value="postre">Postre</option>
                                <option value="pasteleria">Pastelería</option>
                            </select>
                        </div>

                        <div class="mb-3 entrada  checks">
                            <!--opciones vegetariano, vegano, celiaco-->
                            <div class="custom-control custom-checkbox checks">
                                <input type="checkbox" class="custom-control-input" id="comidaVegetariana">
                                <label class="custom-control-label" for="comidaVegetariana">Comida vegetariana</label>  
                            </div>
                            <div class="custom-control custom-checkbox checks">
                                <input type="checkbox" class="custom-control-input" id="comidaVegana">
                                <label class="custom-control-label" for="comidaVegana">Comida vegana</label>
                            </div>
                            <div class="custom-control custom-checkbox checks">
                                <input type="checkbox" class="custom-control-input" id="comidaCeliacos">
                                <label class="custom-control-label" for="comidaCeliacos">Comida para celíacos</label>
                            </div>
                        </div>

                        <div class="mb-3 entrada">
                            <!--precio-->
                            <label for="precio" class="form-label">Precio</label>
                            <input type="number" class="form-control" placeholder="Precio unitario">
                        </div>

                        <div class="mb-3 entrada">
                            <!--cliente-->
                            <label for="cliente" class="form-label">Nombre del cliente</label>
                            <input type="text" class="form-control" placeholder="Nombre del bar/restaurante">
                        </div>

                        <div class="mb-3 entrada">
                            <!--descripción-->
                            <label for="descripcion" class="form-label">Descripción</label>
                            <textarea class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-3 entrada">
                            <!--imagen-->
                            <label for="formFile" class="form-label">Foto del producto</label>
                            <input type="file" id="myFile" name="filename2">
                        </div>

                        <div class="boton-carga">
                            <button type="button" class="btn btn-primary">Guardar cambios</button>
                        </div>

                    </form>
                </div>
            </div>

            <%- include('./partials/footer') %>

                <%- include('./partials/scripts') %>
    </body>

</html>